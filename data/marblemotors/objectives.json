{
    "level_objectives": {
        "basic_objectives": {
            "marble_delivery": {
                "id": "marble_delivery",
                "name": "Marble Delivery",
                "description": "Get marbles from start to finish",
                "type": "delivery",
                "success_conditions": {
                    "marbles_collected": 1,
                    "time_limit": null,
                    "component_limit": null
                },
                "scoring": {
                    "base_points": 100,
                    "time_bonus": "max(0, 300 - completion_time)",
                    "efficiency_bonus": "unused_components * 10"
                }
            },
            "speed_challenge": {
                "id": "speed_challenge",
                "name": "Speed Challenge",
                "description": "Complete the level within the time limit",
                "type": "timed",
                "success_conditions": {
                    "marbles_collected": 1,
                    "time_limit": 60,
                    "component_limit": null
                },
                "scoring": {
                    "base_points": 200,
                    "time_bonus": "remaining_time * 5",
                    "speed_multiplier": "marble_speed * 2"
                }
            },
            "efficiency_test": {
                "id": "efficiency_test",
                "name": "Efficiency Test",
                "description": "Complete using limited components",
                "type": "resource_limited",
                "success_conditions": {
                    "marbles_collected": 1,
                    "time_limit": null,
                    "component_limit": 10
                },
                "scoring": {
                    "base_points": 150,
                    "efficiency_bonus": "(component_limit - components_used) * 20",
                    "perfection_bonus": "components_used === optimal_solution ? 100 : 0"
                }
            }
        },
        "advanced_objectives": {
            "multi_marble": {
                "id": "multi_marble",
                "name": "Multi-Marble Madness",
                "description": "Collect multiple marbles simultaneously",
                "type": "collection",
                "success_conditions": {
                    "marbles_collected": 5,
                    "simultaneous_delivery": true,
                    "time_limit": 120
                },
                "scoring": {
                    "base_points": 300,
                    "simultaneous_bonus": "marbles_delivered_together * 50",
                    "combo_multiplier": "consecutive_deliveries * 1.2"
                }
            },
            "precision_challenge": {
                "id": "precision_challenge",
                "name": "Precision Engineering",
                "description": "Navigate through narrow passages and obstacles",
                "type": "precision",
                "success_conditions": {
                    "marbles_collected": 1,
                    "collision_limit": 3,
                    "precision_required": true
                },
                "scoring": {
                    "base_points": 250,
                    "precision_bonus": "(collision_limit - collisions) * 100",
                    "flawless_bonus": "collisions === 0 ? 500 : 0"
                }
            },
            "chain_reaction": {
                "id": "chain_reaction",
                "name": "Chain Reaction",
                "description": "Trigger a sequence of automated events",
                "type": "automation",
                "success_conditions": {
                    "marbles_collected": 3,
                    "chain_length": 5,
                    "manual_interventions": 1
                },
                "scoring": {
                    "base_points": 400,
                    "chain_bonus": "chain_length * 80",
                    "automation_bonus": "automated_components * 30"
                }
            }
        },
        "expert_objectives": {
            "physics_mastery": {
                "id": "physics_mastery",
                "name": "Physics Mastery",
                "description": "Demonstrate advanced physics understanding",
                "type": "physics_showcase",
                "success_conditions": {
                    "marbles_collected": 1,
                    "required_elements": ["loop", "gravity_well", "momentum_transfer"],
                    "energy_efficiency": 0.8
                },
                "scoring": {
                    "base_points": 500,
                    "physics_bonus": "advanced_elements_used * 100",
                    "energy_bonus": "energy_efficiency * 200"
                }
            },
            "impossible_geometry": {
                "id": "impossible_geometry",
                "name": "Impossible Geometry",
                "description": "Use teleporters and gravity manipulation creatively",
                "type": "creative_solution",
                "success_conditions": {
                    "marbles_collected": 2,
                    "required_elements": ["teleporter", "gravity_reversal"],
                    "path_crossing_forbidden": true
                },
                "scoring": {
                    "base_points": 600,
                    "creativity_bonus": "unique_solution ? 300 : 0",
                    "elegance_bonus": "solution_elegance_rating * 50"
                }
            },
            "grand_finale": {
                "id": "grand_finale",
                "name": "Grand Finale",
                "description": "The ultimate marble challenge combining all mechanics",
                "type": "comprehensive",
                "success_conditions": {
                    "marbles_collected": 10,
                    "time_limit": 300,
                    "component_categories": ["basic", "mechanical", "interactive", "special"],
                    "minimum_complexity": 25
                },
                "scoring": {
                    "base_points": 1000,
                    "mastery_bonus": "mechanics_demonstrated * 100",
                    "legendary_bonus": "perfect_execution ? 1000 : 0"
                }
            }
        }
    },
